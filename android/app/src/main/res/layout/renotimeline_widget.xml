<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background_premium"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="CalcReno Icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="RenoTimeline"
            android:textColor="@color/reno_text_primary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/task_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 zadań"
            android:textColor="@color/reno_text_tertiary"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Loading State -->
    <LinearLayout
        android:id="@+id/widget_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ładowanie..."
            android:textColor="@color/reno_text_tertiary"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/widget_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/empty_state_bg"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brak pilnych zadań"
            android:textColor="@color/reno_text_primary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Wszystko na czas!"
            android:textColor="@color/reno_text_tertiary"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Login State -->
    <LinearLayout
        android:id="@+id/widget_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/widget_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zaloguj się w aplikacji"
            android:textColor="@color/reno_text_tertiary"
            android:textSize="14sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Tasks Container -->
    <LinearLayout
        android:id="@+id/tasks_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Featured Task -->
        <LinearLayout
            android:id="@+id/featured_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/featured_card_bg"
            android:padding="14dp"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/featured_task_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Montaż okien"
                    android:textColor="@color/reno_text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/featured_priority_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/priority_badge_high"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="PILNE"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/featured_project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Remont kuchni"
                android:textColor="@color/reno_text_tertiary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/featured_task_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="12 Gru 2025"
                android:textColor="@color/reno_accent"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Additional Tasks Header -->
        <TextView
            android:id="@+id/other_tasks_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KOLEJNE ZADANIA"
            android:textColor="@color/reno_text_tertiary"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Task 2 -->
        <LinearLayout
            android:id="@+id/task_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/task_card_bg"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="7dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/task_2_priority"
                android:layout_width="3dp"
                android:layout_height="32dp"
                android:background="@color/reno_warning" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/task_2_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wylewka podłogi"
                    android:textColor="@color/reno_text_primary"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/task_2_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Remont łazienki"
                    android:textColor="@color/reno_text_tertiary"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <TextView
                android:id="@+id/task_2_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="13 Gru"
                android:textColor="@color/reno_text_secondary"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Task 3 -->
        <LinearLayout
            android:id="@+id/task_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/task_card_bg"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="7dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/task_3_priority"
                android:layout_width="3dp"
                android:layout_height="32dp"
                android:background="@color/reno_warning" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/task_3_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Instalacja elektryki"
                    android:textColor="@color/reno_text_primary"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/task_3_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Remont salonu"
                    android:textColor="@color/reno_text_tertiary"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <TextView
                android:id="@+id/task_3_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="15 Gru"
                android:textColor="@color/reno_text_secondary"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Task 4 -->
        <LinearLayout
            android:id="@+id/task_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/task_card_bg"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="7dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/task_4_priority"
                android:layout_width="3dp"
                android:layout_height="32dp"
                android:background="@color/reno_primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/task_4_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Malowanie ścian"
                    android:textColor="@color/reno_text_primary"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/task_4_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Remont sypialni"
                    android:textColor="@color/reno_text_tertiary"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <TextView
                android:id="@+id/task_4_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="18 Gru"
                android:textColor="@color/reno_text_secondary"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Task 5 -->
        <LinearLayout
            android:id="@+id/task_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/task_card_bg"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/task_5_priority"
                android:layout_width="3dp"
                android:layout_height="32dp"
                android:background="@color/reno_primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/task_5_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zakup mebli"
                    android:textColor="@color/reno_text_primary"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/task_5_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Remont całego domu"
                    android:textColor="@color/reno_text_tertiary"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <TextView
                android:id="@+id/task_5_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="20 Gru"
                android:textColor="@color/reno_text_secondary"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
